# install NVIDIA apex (should be doable via pip requirements file!)
if [ -d $PWD/apex ]; then rm -rf $PWD/apex; fi
git clone https://github.com/NVIDIA/apex
pip install -v --no-cache-dir --global-option="--cpp_ext" --global-option="--cuda_ext" $PWD/apex

# install JupyterLab extensions
jupyter labextension install --no-build jupyterlab_tensorboard
jupyter labextension install --no-build jupyterlab-nvdashboard
jupyter lab build
